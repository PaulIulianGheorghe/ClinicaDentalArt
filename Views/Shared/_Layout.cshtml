<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Dental Art</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>

<body>
    <nav class="navbar navbar-expand-md navbar-light pt-4 pb-4">
        <div class="container-xxl">

            <a class="navbar-brand " href="@Url.Action("Index", "Home")">
                <span class="text-secondary fw-bold">
                    <img src="~/Content/Images/tooth1nobg.png" class="img-circle" ALIGN="top" height="80" width="80" style="padding-top:0" />
                    Dental Art
                </span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse justify-content-end align-center mx-5 px-3" id="main-nav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-success h6" style="" href="https://localhost:44361/Home/About">Despre noi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-success h6" href="https://localhost:44361/Echipa/Index">Echipa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-success h6" href="https://localhost:44361/Serviciu/Index">Servicii</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-success h6" href="https://localhost:44361/Pret/Index">Preturi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-success h6" href="https://localhost:44361/Programare/Index">Programari</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-success h6" href="https://localhost:44361/Home/Contact">Contact</a>
                    </li>

                    <li class="nav-item d-md-none">
                        <a class="nav-link" href="https://localhost:44361/Account/Register">Inregistreaza-te</a>
                    </li>
                    <li class="nav-item d-md-none">
                        <a class="nav-link" href="https://localhost:44361/Account/Login">Intra in cont</a>
                    </li>
                    <li class="nav-item d-md-none">
                        <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Iesire</a>
                    </li>
                </ul>
                <span class="navbar-text ">
                    @Html.Partial("_LoginPartial")
                </span>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center" style="padding-top:15px; font-size: 12px;">
            <a class="up-arrow" href="" data-toggle="tooltip" title="Back to top">
                <span class="bi bi-chevron-bar-up text-primary" style="font-size: 2rem; color:dimgray"></span>
            </a><br />
            <br /><p>&copy; @DateTime.Now.Year - Clinica Dental Art Craiova. Tel: 0742.148.249</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script>
        const tooltips = document.querySelectorAll('.tt')
        tooltips.forEach(t => {
            new bootstrap.Tooltip(t)
        })
    </script>
</body>
</html>
